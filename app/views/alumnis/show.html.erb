<% if current_user.is_admin == true %>
  <p id="notice"><%= notice %></p>
  <br>
  <br>
  <div class="row">
    <div class="col-4">
    </div>
    <div class= "card col-4">
      <br>
        <p>
          <strong>Name:</strong>
          <%= @alumni.alumni_name %>
        </p>

        <p>
          <strong>LinkedIn Link:</strong>
          <%= link_to @alumni.LinkedIn, @alumni.LinkedIn %>
        </p>

        <p>
          <strong>Graduation Year:</strong>
          <%= @alumni.alumni_grad_year %>
        </p>

        <p>
          <strong>Highest Position:</strong>
          <%= @alumni.highest_position %>
        </p>
        <br>
    </div>
    <div class="col-4">
    </div>
  </div>

  <br>

  <div class="row">
      <div class="col-md-4">
      </div>

      <div class="col-md-1 button-col">
        <%= button_to 'Edit', edit_alumni_path(@alumni), :method => :get, class: "btn btn-secondary" %>
      </div>

      <div class="col-md-3 button-col">
        <%= button_to 'Back to Alumni List', alumnis_path, :method => :get, class: "btn btn-outline-secondary" %>
      </div>
      <div class="col-md-4">
      </div>
  </div>
<% end %>

<% if current_user.is_admin == false %>
  <h1>You do not have access to this page!</h1>
<% end %>

