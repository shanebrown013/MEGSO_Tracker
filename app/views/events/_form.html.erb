<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="form-group col-md-4">
      <div class="field">
        <%= form.label :event_name, "Event Name" %>
        <%= form.text_field :event_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group col-md-4">
      <div class="field">
        <%= form.label :event_location, "Event Location" %>
        <%= form.text_field :event_location, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="form-group col-md-4">
      <div class="field">
        <%= form.label :event_point, "Amount of Points" %>
        <%= form.number_field :event_point, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group col-md-4">
      <div class="field">
        <%= form.label :event_verification, "Event Verification Code" %>
        <%= form.text_field :event_verification, class: "form-control" %>
      </div>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="form-group col-md-3">
      <div class="field date">
        <%= form.label :event_date, "Event Date" %>
        <%= form.date_select :event_date, class: "form-control" %>
      </div>
    </div>
    <div class="form-group col-md-2">
      <div class="field stime">
        <%= form.label :event_start, "Start Time" %>
        <%= form.time_select :event_start, class: "form-control" %>
      </div>
    </div>
    <div class="form-group col-md-2">
      <div class="field etime">
        <%= form.label :event_end, "End Time" %>
        <%= form.time_select :event_end, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-3">
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="form-group col-md-4">
      <div class="field">
        <%= form.label :event_description, "Event Description" %>
        <%= form.text_area :event_description, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-4">
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="actions col-md-3 button-col">
      <%= form.submit class: "btn btn-secondary"%>
    </div>
<% end %>

    <div class="col-md-3 button-col">
      <%= button_to 'Back to Event List', events_path, :method => :get, class: "btn btn-outline-secondary" %>
    </div>
    <div class="col-md-3">
    </div>
  </div>
