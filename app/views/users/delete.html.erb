<% if current_user.is_admin == true %>
  <div class="row">
    <div class = "col">
    </div>
    <div class = "col-3">
      <h1>Delete User</h1>
    </div>
    <div class = "col">
    </div>
  </div>

  <div class="row">
    <div class="col-4">
    </div>
    <div class= "card col-4">
      <div class="card-header">
        <p>
          <%= @user.first_name %> <%= @user.last_name %>
        </p>
      </div>
      <div class="card-body">
        <p> <b>Email:</b> <%= @user.email %> </p>
        <p> <b>UIN:</b> <%= @user.UID %> </p>
        <p> <b>Points:</b> <%= @user.points %> </p>
        <p> <b>Rewards Earned:</b> <%= @user.rewards_earned %> </p>
        <p> <b>Is an Admin:</b> <%= @user.is_admin %> </p>
        <p> <b>Is an Officer:</b> <%= @user.is_officer %> </p>
      </div>
    </div>
    <div class="col-4">
    </div>
  </div>

  <br>

  <div class="row">
    <div class = "col">
    </div>
    <div class = "col-4 del-txt">
      <p>Are you sure you want to delete this user?</p>
    </div>
    <div class = "col">
    </div>
  </div>


  <br>
  <div class="row">
    <div class="col">
    </div>
    <div class="col-md-1 button-col">
      <%= button_to 'Yes', @user, method: :delete, class: "btn btn-secondary"%>
    </div>
    <div class="col-md-1 button-col">
      <%= button_to 'Back to Users List', users_path, :method => :get, class: "btn btn-outline-secondary" %>
    </div>
    <div class="col">
    </div>
  </div>
<% end %>

<% if current_user.is_admin == false %>
  <h1>You do not have access to this page!</h1>
<% end %>