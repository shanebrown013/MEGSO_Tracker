<div class="row">
  <div class = "col">
  </div>
  <div class = "col-5">
    <h1>Admins</h1>
  </div>
  <div class = "col">
  </div>
</div>
<div class="row">
  <div class="col-10">
    <div class = "table-responsive bdr">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">UIN</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
            <% if user.is_admin == true %>
              <td scope="row"><%= link_to user.first_name, user, :method => :get %></td>
              <td><%= user.last_name %></td>
              <td><%= user.email %></td>
              <td><%= user.UID %></td>
              <td>
